<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.HomeController"
            prefWidth="1024"
            prefHeight="768">

    <!-- ================= TOP NAVIGATION ================= -->
    <top>
        <VBox>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT"
                  spacing="20"
                  style="-fx-background-color: #c62828;">

                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Ultra Pizza"
                       style="-fx-text-fill: white; -fx-font-size: 20px;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Start Order"
                        onAction="#goToOrder"/>
                <Button fx:id="logInButton"
                        text="Sign In"
                        onAction="#goToLogIn"/>

                <Label fx:id="orderTotalLabel"
                       text="\$0.00"
                       style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            </HBox>

        </VBox>
    </top>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <HBox alignment="CENTER"
              spacing="40">

            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Promo text -->
            <VBox alignment="CENTER_LEFT" spacing="10">

                <Label text="NEW!"
                       style="-fx-text-fill: #e65100; -fx-font-size: 14px;"/>

                <Label text="Pizza"
                       style="-fx-font-size: 24px;"/>

                <Label text="GRANDE"
                       style="-fx-font-size: 48px; -fx-font-weight: bold;"/>

                <Label text="Box"
                       style="-fx-font-size: 24px;"/>
            </VBox>

            <!-- Deal -->
            <VBox alignment="CENTER_LEFT" spacing="15">

                <Label text="2 Regular Pizzas"/>
                <Label text="4 Breadsticks"/>
                <Label text="6 Wings"/>

                <Label text="\$14.99"
                       style="-fx-text-fill: #c62828; -fx-font-size: 20px;"/>

                <Button fx:id="orderNowButton"
                        text="Order Now"
                        prefWidth="140"
                        onAction="#goToOrder"/>
            </VBox>

        </HBox>
    </center>

    <!-- ================= BOTTOM ================= -->
    <bottom>
        <VBox alignment="CENTER">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="menuButton"
                    text="Menu"
                    prefWidth="200"
                    prefHeight="50"
                    onAction = "#goToMenu"/>
        </VBox>
    </bottom>

</BorderPane>
